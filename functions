<script>

//percent daily values: (amount of sugar in food/ 38 or 25)*100

    function percentDailyValues (amountOfSugarInFood, recommendedDailySugar)
{
    var recommendedDailySugar = prompt("Are you a boy (1) or a girl (2)?");
    if (recommendedDailySugar === "2") 
    {
    recommendedDailySugar = 25
var amountOfSugarInFood = prompt("How much sugar is in your food product?"); 
    console.log("The percent daily value of your food product is: " + (amountOfSugarInFood / recommendedDailySugar)*100);
    }
else 
    {
    recommendedDailySugar = 38
var amountOfSugarInFood = prompt("How much sugar is in your food product?"); 
    console.log("The percent daily value of your food product is: " + (amountOfSugarInFood / recommendedDailySugar)*100);
    }
}
        percentDailyValues()
</script>
